@model ContatoModel
@{
    ViewData["Title"] = "Confirmação apagar o contato";
}

<div class="text-center">
    <h3>Realemnte deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-danger col-12" role="button" asp-route-id="@Model.Id" asp-controller="Contato" asp-action="Apagar">Excluir</a>
<br />
<a class="btn col-12 btn-primary" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>
@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação apagar o usuário";
}

<div class="text-center">
    <h3>Realemnte deseja apagar o usuário (@Model.Nome)?</h3>
</div>

<a class="btn btn-danger col-12" role="button" asp-route-id="@Model.Id" asp-controller="Usuario" asp-action="Apagar">Excluir</a>
<br />
<a class="btn col-12 btn-primary" role="button" asp-controller="Usuario" asp-action="Index">Cancelar</a>